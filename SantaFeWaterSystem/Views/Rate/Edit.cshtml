@model SantaFeWaterSystem.Models.Rate

@{
    ViewData["Title"] = "Edit Rate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <style>
        .edit-rate-card {
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
            margin-top: 2rem;
        }

            .edit-rate-card h2 {
                color: #0d6efd;
                font-weight: 600;
            }

        label {
            font-weight: 500;
        }
    </style>
}

<div class="container">
    <div class="edit-rate-card">
        <h2><i class="bi bi-pencil-square me-1"></i> @ViewData["Title"]</h2>
        <hr />

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="AccountType" class="form-label"></label>
                <select asp-for="AccountType" class="form-select" asp-items="ViewBag.AccountTypes">
                    <option value="">-- Select Account Type --</option>
                </select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RatePerCubicMeter" class="form-label"></label>
                <input asp-for="RatePerCubicMeter" class="form-control" />
                <span asp-validation-for="RatePerCubicMeter" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PenaltyAmount" class="form-label"></label>
                <input asp-for="PenaltyAmount" class="form-control" />
                <span asp-validation-for="PenaltyAmount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EffectiveDate" class="form-label"></label>
                <input asp-for="EffectiveDate" type="date" class="form-control" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save me-1"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}