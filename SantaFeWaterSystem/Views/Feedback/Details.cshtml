@model SantaFeWaterSystem.Models.Feedback
@{
    ViewData["Title"] = "Feedback Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .details-card {
        max-width: 700px;
        margin: auto;
        border-left: 5px solid #0d6efd;
    }

    .details-title {
        font-size: 2rem;
        font-weight: bold;
        color: #0d6efd;
        border-bottom: 2px solid #0d6efd;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .details-item {
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

        .details-item i {
            color: #0d6efd;
            margin-right: 8px;
        }
</style>

<div class="card shadow p-4 details-card">
    <div class="details-title">
        <i class="bi bi-chat-square-text"></i> Feedback Details
    </div>

    <div class="details-item">
        <i class="bi bi-person-circle"></i>
        <strong>Account:</strong> @Model.User?.AccountNumber
    </div>

    <div class="details-item">
        <i class="bi bi-star-fill"></i>
        <strong>Rating:</strong> @Model.Rating
    </div>

    <div class="details-item">
        <i class="bi bi-card-text"></i>
        <strong>Comment:</strong> @Model.Comment
    </div>

    <div class="details-item">
        <i class="bi bi-info-circle"></i>
        <strong>Status:</strong> @Model.Status
    </div>

    @if (!string.IsNullOrEmpty(Model.Reply))
    {
        <div class="details-item">
            <i class="bi bi-reply-fill"></i>
            <strong>Admin Reply:</strong> @Model.Reply
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
