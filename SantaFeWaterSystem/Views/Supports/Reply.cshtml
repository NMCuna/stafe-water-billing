@model SantaFeWaterSystem.Models.Support

@{
    ViewData["Title"] = "Reply to Ticket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Reply to Support Ticket</h2>

<form asp-action="Reply" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Subject</label>
        <input class="form-control" value="@Model.Subject" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Message</label>
        <textarea class="form-control" rows="4" readonly>@Model.Message</textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AdminReply">Your Reply</label>
        <textarea asp-for="AdminReply" class="form-control" rows="4"></textarea>
        <span asp-validation-for="AdminReply" class="text-danger"></span>
    </div>

    <!-- ✅ Added Resolved Checkbox -->
    <div class="form-check mb-3">
        <input asp-for="IsResolved" class="form-check-input" type="checkbox" id="IsResolved" />
        <label asp-for="IsResolved" class="form-check-label">Mark as Resolved</label>
    </div>

    <button type="submit" class="btn btn-primary">Send Reply</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
