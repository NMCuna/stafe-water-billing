@model SantaFeWaterSystem.Models.Consumer

@{
    ViewData["Title"] = "Consumer Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        h2.page-header {
            font-size: 2rem;
            color: #0d6efd;
            font-weight: bold;
            border-left: 5px solid #0d6efd;
            padding-left: 15px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
        }

            h2.page-header i {
                margin-right: 10px;
            }

        .card-details {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            padding: 2rem;
        }

            .card-details table {
                width: 100%;
            }

            .card-details th {
                width: 25%;
                background-color: #f8f9fa;
                padding: 0.75rem;
                text-align: left;
                vertical-align: top;
            }

            .card-details td {
                padding: 0.75rem;
            }

        .btn i {
            margin-right: 5px;
        }
    </style>
}

<div class="container mt-4">
    <h2 class="page-header"><i class="bi bi-person-lines-fill"></i> Consumer Details</h2>

    <div class="card-details mb-4">
        <table class="table table-bordered mb-0">
            <tr>
                <th><i class="bi bi-person-vcard"></i> Full Name</th>
                <td>@Model.LastName, @Model.FirstName @Model.MiddleName</td>
            </tr>
            <tr>
                <th><i class="bi bi-envelope"></i> Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th><i class="bi bi-house-door"></i> Home Address</th>
                <td>@Model.HomeAddress</td>
            </tr>
            <tr>
                <th><i class="bi bi-geo-alt"></i> Meter Address</th>
                <td>@Model.MeterAddress</td>
            </tr>
            <tr>
                <th><i class="bi bi-telephone"></i> Contact Number</th>
                <td>@Model.ContactNumber</td>
            </tr>
            <tr>
                <th><i class="bi bi-speedometer2"></i> Meter No</th>
                <td>@Model.MeterNo</td>
            </tr>
            <tr>
                <th><i class="bi bi-card-list"></i> Account Type</th>
                <td>@Model.AccountType</td>
            </tr>
            <tr>
                <th><i class="bi bi-person-check"></i> Linked User</th>
                <td>@Model.User?.Username (@Model.User?.AccountNumber)</td>
            </tr>
        </table>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Consumers" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
        <a asp-action="EditConsumer" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
        <a asp-action="DeleteConsumer" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Delete</a>
    </div>
</div>
