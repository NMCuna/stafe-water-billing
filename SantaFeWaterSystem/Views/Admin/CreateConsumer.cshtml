@model SantaFeWaterSystem.Models.Consumer

@{
    ViewData["Title"] = "Add New Consumer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        h2.page-header {
            font-size: 2rem;
            color: #0d6efd;
            font-weight: bold;
            border-left: 5px solid #0d6efd;
            padding-left: 15px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
        }

            h2.page-header i {
                margin-right: 10px;
            }

        .form-section {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
        }

        .input-icon-group {
            position: relative;
        }

            .input-icon-group i {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #6c757d;
                transition: 0.3s ease;
            }

            .input-icon-group input,
            .input-icon-group select {
                padding-left: 2.2rem;
            }

                .input-icon-group input:focus + i,
                .input-icon-group select:focus + i {
                    color: #0d6efd;
                    transform: translateY(-50%) scale(1.1);
                }

        .btn i {
            margin-right: 5px;
        }

        .btn-primary, .btn-secondary {
            border-radius: 8px;
        }
    </style>
}

<div class="container mt-4">
    <h2 class="page-header"><i class="bi bi-person-plus-fill"></i> Add New Consumer</h2>

    <div class="form-section">
        <form asp-action="CreateConsumer" method="post">
            <div class="row g-3">
                <!-- Last Name -->
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label" data-bs-toggle="tooltip" title="Enter consumer's last name">Last Name</label>
                    <div class="input-icon-group">
                        <input asp-for="LastName" class="form-control" />
                        <i class="bi bi-person-vcard"></i>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- First Name -->
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label" data-bs-toggle="tooltip" title="Enter consumer's first name">First Name</label>
                    <div class="input-icon-group">
                        <input asp-for="FirstName" class="form-control" />
                        <i class="bi bi-person-vcard"></i>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Middle Name -->
                <div class="col-md-6">
                    <label asp-for="MiddleName" class="form-label" data-bs-toggle="tooltip" title="Enter consumer's middle name">Middle Name</label>
                    <div class="input-icon-group">
                        <input asp-for="MiddleName" class="form-control" />
                        <i class="bi bi-person-vcard"></i>
                    </div>
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>

                <!-- Account Type -->
                <div class="col-md-6">
                    <label asp-for="AccountType" class="form-label" data-bs-toggle="tooltip" title="Select the consumer's account type">Account Type</label>
                    <div class="input-icon-group">
                        <select asp-for="AccountType" class="form-select" asp-items="ViewBag.AccountTypes">
                            <option value="">-- Select Account Type --</option>
                        </select>
                        <i class="bi bi-card-list"></i>
                    </div>
                    <span asp-validation-for="AccountType" class="text-danger"></span>
                </div>

                <!-- Meter No -->
                <div class="col-md-6">
                    <label asp-for="MeterNo" class="form-label" data-bs-toggle="tooltip" title="Enter assigned water meter number">Meter No</label>
                    <div class="input-icon-group">
                        <input asp-for="MeterNo" class="form-control" />
                        <i class="bi bi-speedometer2"></i>
                    </div>
                    <span asp-validation-for="MeterNo" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label" data-bs-toggle="tooltip" title="Consumer's active email address">Email</label>
                    <div class="input-icon-group">
                        <input asp-for="Email" class="form-control" />
                        <i class="bi bi-envelope"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Home Address -->
                <div class="col-md-6">
                    <label asp-for="HomeAddress" class="form-label" data-bs-toggle="tooltip" title="Home address of the consumer">Home Address</label>
                    <div class="input-icon-group">
                        <input asp-for="HomeAddress" class="form-control" />
                        <i class="bi bi-house-door"></i>
                    </div>
                    <span asp-validation-for="HomeAddress" class="text-danger"></span>
                </div>

                <!-- Meter Address -->
                <div class="col-md-6">
                    <label asp-for="MeterAddress" class="form-label" data-bs-toggle="tooltip" title="Physical location of the meter">Meter Address</label>
                    <div class="input-icon-group">
                        <input asp-for="MeterAddress" class="form-control" />
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <span asp-validation-for="MeterAddress" class="text-danger"></span>
                </div>

                <!-- Contact Number -->
                <div class="col-md-6">
                    <label asp-for="ContactNumber" class="form-label" data-bs-toggle="tooltip" title="Active phone number for contact">Contact Number</label>
                    <div class="input-icon-group">
                        <input asp-for="ContactNumber" class="form-control" />
                        <i class="bi bi-telephone"></i>
                    </div>
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <!-- Linked User -->
                <div class="col-md-6">
                    <label asp-for="UserId" class="form-label" data-bs-toggle="tooltip" title="Select linked system user account">Linked User</label>
                    <div class="input-icon-group">
                        <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users">
                            <option value="">-- Select a User --</option>
                        </select>
                        <i class="bi bi-person-check"></i>
                    </div>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Create</button>
                <a asp-action="Consumers" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enable Bootstrap tooltips
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
