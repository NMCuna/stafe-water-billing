@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AccountLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card shadow-lg rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 text-primary">
                        <i class="fas fa-unlock-alt me-2"></i> Forgot Password
                    </h3>

                    <form asp-action="ForgotPassword" method="post" novalidate>
                        <div class="mb-3">
                            <label for="accountNumber" class="form-label fw-semibold">
                                <i class="fas fa-id-card me-1"></i>Account Number
                            </label>
                            <input type="text" name="accountNumber" id="accountNumber" class="form-control form-glow" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i>Submit
                            </button>
                            <a asp-action="UserLogin" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </form>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-circle me-1"></i>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .glass-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .form-glow:focus {
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
            border-color: #0d6efd;
        }

        .alert-danger {
            animation: fadeIn 0.4s ease-in-out;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
