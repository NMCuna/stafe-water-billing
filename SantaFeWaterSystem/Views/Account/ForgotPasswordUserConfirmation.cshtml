@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_AccountLayout";

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card confirmation-card shadow-lg border-0 rounded-4 text-center p-4">
                <div class="card-body">
                    <h3 class="text-success mb-3">
                        <i class="fas fa-check-circle fa-lg me-2"></i>
                        @ViewData["Title"]
                    </h3>
                    <p class="lead text-muted">
                        If an account with that email exists, a password reset link has been sent.<br />
                        Please check your inbox and follow the instructions to reset your password.
                    </p>

                    <div class="mt-4">
                        <a asp-action="UserLogin" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-1"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .confirmation-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0, 0, 0, 0.05);
            animation: fadeInUp 0.6s ease;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
}
