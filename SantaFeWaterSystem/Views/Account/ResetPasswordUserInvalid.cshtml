@{
    ViewData["Title"] = "Invalid or Expired Token";
    Layout = "_AccountLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h3 class="text-danger mb-3">Invalid or Expired Token</h3>
                    <p class="mb-4">The password reset link is invalid or has expired. Please click below to request a new one.</p>
                    <a href="/Account/ForgotPasswordUser" class="btn btn-warning">
                        <i class="fas fa-envelope-open-text me-2"></i>Request New Reset Link
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
