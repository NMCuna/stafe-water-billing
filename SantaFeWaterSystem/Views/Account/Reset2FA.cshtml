@model SantaFeWaterSystem.Models.User

@{
    ViewData["Title"] = "Reset 2FA";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="shadow p-4 rounded bg-white">
                <h2 class="text-center text-dark mb-4">Reset Two-Factor Authentication</h2>

                <div class="alert alert-warning">
                    <p class="mb-1">
                        Are you sure you want to reset 2FA for user: <strong>@Model.Username</strong>?
                    </p>
                    <p class="mb-0">
                        This will disable two-factor authentication. The user must reconfigure it next login.
                    </p>
                </div>

                <form asp-action="Reset2FA" method="post" class="mt-3">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4">Reset 2FA</button>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary px-4">Cancel</a>
                        }
                        else
                        {
                            <a asp-controller="User" asp-action="Dashboard" class="btn btn-outline-secondary px-4">Cancel</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
