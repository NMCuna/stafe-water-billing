@{
    Layout = null;
    var title = ViewData["Title"] ?? "Santa Fe Water System";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- External Styles -->
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/layout.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/user-login.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/login.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/twofa.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/twofaUser.css" asp-append-version="true" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Background and Animated Wave -->
    <div class="bg-wave"></div>
    <svg class="wave-svg" viewBox="0 0 1200 200" preserveAspectRatio="none">
        <path d="M0,100 C300,200 900,0 1200,100 L1200,200 L0,200 Z" fill="rgba(255,255,255,0.5)" />
    </svg>

    <!-- Main Content -->
    <div class="container container-responsive d-flex align-items-center justify-content-center py-4 py-md-5">
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Only -->
    <footer class="footer text-center py-3 bg-light mt-auto">
        <div class="container">
            &copy; 2025 Santa Fe Water Billing System –
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
